vim9script

# enable ft plugin
filetype plugin on

# encoding
set encoding=utf-8
set fileencoding=utf-8

# theme and font
syntax on
colorscheme codedark
set guifont=Sauce\ Code\ Pro\ Nerd\ Font\ 14
set guioptions=c

# nocompatible for disable deprecated futures
set nocompatible

# terminal configs
const g:loaterm_borderchars: string = "─│─│┌┐┘└"

# search
set iminsert=0
set imsearch=0
set hlsearch

# undofile
set undodir=~/.vim/undodir
set undofile

# numbers and relativenumbers
set number
set relativenumber

# cursor
set cursorline

# dont show current mode
set noshowmode

# active status lines (for lightline)
set laststatus=2
set showtabline=2

# indent
set shiftwidth=2
set tabstop=2
set autoindent
set smartindent
set expandtab

# filetypes plugins
filetype plugin on
filetype indent on

# auto read file
set autoread
set updatetime=200

# menu for autocomplete command on command mode
set wildmenu
set wildoptions=pum
set pumheight=10

# enable mouse mode in all modes
set mouse=a

# enable clipboard support
set clipboard=unnamedplus

# correct splits
set splitbelow
set splitright

# enable autocomplete on tab
set omnifunc=ale#completion#OmniFunc
set completeopt=menu,preview
set completepopup=height:10,width:60
const g:SuperTabDefaultCompletionType: string = "<C-n>"

# set lightline colorscheme
const g:lightline = {'colorscheme': 'codedark'}

# disable default plugins
const g:netrw_silent: bool = 1
const g:loaded_rrhelper: bool = 1
const g:loaded_gzip: bool = 1
const g:loaded_getscriptPlugin: bool = 1
const g:loaded_vimballPlugin: bool = 1
const g:loaded_netrwPlugin: bool = 1
const g:loaded_zipPlugin: bool = 1
const g:loaded_manpager: bool = 1
const g:loaded_spellfile: bool = 1
const g:loaded_tohtml: bool = 1
const g:loaded_fzf: bool = 1
const g:loaded_matchparen: bool = 1
const g:loaded_logiPat: bool = 1
const g:loaded_tarPlugin: bool = 1
const g:netrw_use_noswf: bool = 0

# remove trailing whitespaces on save
autocmd BufWritePre * :%s/\s\+$//e

# keys
set winaltkeys=yes
# tabs keys
nmap <C-b> :tabnew<cr>
nmap <C-c> :tabclose<cr>
nmap <C-n> :tabnext<cr>
nmap <C-p> :tabprevious<cr>

# splits keys
nmap <C-k> :vsplit<cr>
nmap <C-l> :split<cr>

# save and exit keys
nmap <C-q> :q<cr>
nmap <C-s> :w<cr>

# spawn floating terminal
nmap <C-z> :FloatermNew<cr>

